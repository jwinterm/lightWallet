    BoxLayout:
        padding: 30, 30, 30, 30
        orientation: 'vertical'
        Label:
            text: "Enter amount of XMR to donate:"
        TextInput:
            id: donation_amount_core
        BoxLayout:
            Button:
                text: "Donate!"
                on_press: root.make_donation()
